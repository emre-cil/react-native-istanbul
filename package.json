{
  "name": "react-native-istanbul-workspace",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:package": "turbo run build --filter=react-native-istanbul",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "dev": "turbo run start",
    "publish:patch": "npm run build:package && npm version patch -w react-native-istanbul && npm publish -w react-native-istanbul",
    "publish:minor": "npm run build:package && npm version minor -w react-native-istanbul && npm publish -w react-native-istanbul",
    "publish:major": "npm run build:package && npm version major -w react-native-istanbul && npm publish -w react-native-istanbul",
    "example": "turbo run start --filter=example",
    "example:ios": "turbo run ios --filter=example",
    "example:android": "turbo run android --filter=example",
    "example:web": "turbo run web --filter=example",
    "dev:watch": "npm run watch -w react-native-istanbul",
    "dev:example": "npm run example",
    "storybook": "turbo run storybook --filter=example",
    "storybook:web": "cd apps/example && STORYBOOK_WEB=true storybook dev -p 6006"
  },
  "devDependencies": {
    "typescript": "~5.9.2",
    "turbo": "^2.6.1"
  }
}
